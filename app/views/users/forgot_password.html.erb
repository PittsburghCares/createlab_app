<%= javascript_include_tag('jquery.min','generic_form') %>
<script type="text/javascript">
  jQuery.noConflict();
  jQuery(document).ready(function() {
    setupSubmitButtons("#saveForm");
  });
</script>

<% form_for(:user, :url => {:action => 'forgot_password'}, :html => {:class => "pf-form"}) do |f| %>
	<div class="pf-element">
		<fieldset style="width: 970px">
			<%= f.error_messages(:object_name=>'information') %>
			<div class="pf-element pf-heading">
					<h2>Password Reset Request Form</h2>
					<p>Enter your email address that we have on file and click submit. We will 
				 send you an email with a link to reset your password.</p>
			</div>
			<div class="pf-element">
					<label>
							<span class="pf-label">Email Address</span>
							<%= f.text_field :email, :size => 30, :class=>'pf-field' %>
					</label>
			</div>

			<div class="pf-element pf-buttons" style="border-bottom: none !important; min-width: 0px !important">
				<%= submit_tag 'Submit', :class=>"button", :id=>"saveForm" %>
				<div class="spacer"></div>
			</div>			
		</fieldset>
	</div>
<% end %>

