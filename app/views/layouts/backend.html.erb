<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title><%= $organization_name %></title>
    <%= javascript_include_tag(:defaults) %>
    <%= stylesheet_link_tag('backend') %>
    <%= yield :head %>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <h1>
          <a href="/management" title="Management"><img src="/images/create_logo-backend.png" border="0" alt="home" /></a>
        </h1>
        <% if current_user -%>
          <span>Logged in as: <b><%= h(current_user.login) %></b> (<%= link_to "log out", '/logout', { :title => "Log out" } %>) </span>
        <% else %>
          <span><%= link_to('Login', '/login', { :title => "Login" }) %></span>
        <% end %>
      </div>
      <div id="navigation">
        <ul>
          <li><a href="/<%= $projects_name_replacement %>" class="menulink">Front End</a></li>
          <li><a href="/events" class="menulink">Events</a></li>
          <li><a href="/management" class="menulink">Management</a></li>
        </ul>
      </div>
      <div id="content-container">
        <%- flash.each do |key, msg| -%>
          <br/>
          <div id="<%= key %>" style="margin: 0px 0px 0px 40px; width: 980px">  
            <%= msg %>
          </div>
        <%- end -%>	
        <div id="content">
          <%= yield %>
        </div>
        <div id="footer">
          <%= $organization_name %> &copy; 2012
        </div>
      </div>
    </div>	
  </body>
</html>